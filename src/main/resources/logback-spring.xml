<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<include resource="org/springframework/boot/logging/logback/defaults.xml" />
	<include resource="org/springframework/boot/logging/logback/console-appender.xml" />
	<property name="LOG_DIR" value="./logs" />
	<property name="HOSTNAME" value="${HOSTNAME}" />
	<property name="LOG_FILE_NAME" value="MasQuotation.log" />
	
	<appender name="ROLLING-FILE" class="ch.qos.logback.core.FileAppender">
		<encoder>
			<pattern>${FILE_LOG_PATTERN}</pattern>
		</encoder>
		<file>${LOG_DIR}/${LOG_FILE_NAME}</file>
	</appender>
	
	<appender name="CLOUDWATCH" class="com.mas.quotation.util.CloudWatchAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
	
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="ROLLING-FILE" />
		<appender-ref ref="CLOUDWATCH" />
	</root>
</configuration>